<%- include('layout/header.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-success">
                    <h3 class="text-light">Edit User (<%= user.name %> )</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/edit/<%= user._id %>" method="POST" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control form-control-lg"
                             placeholder="Enter name" value="<%= user.name %>" required/>
                        </div>
                        <div class="mb-3">
                            <label for="email">Email</label>
                            <input type="text" name="email" class="form-control form-control-lg"
                             placeholder="Enter email" value="<%= user.email %>" required/>
                        </div>
                        <div class="mb-3">
                            <label for="mobile">Mobile</label>
                            <input type="number" name="number" class="form-control form-control-lg"
                             placeholder="Enter mobile number" value="<%= user.mobile %>" required/>
                        </div>
                        <div class="mb-3">
                            <label for="address">Address</label>
                            <input type="text" name="address" class="form-control form-control-lg"
                             placeholder="Enter address" value="<%= user.address %>" required/>
                        </div>
                        <div class="mb-3">
                            <label for="salary">Salary</label>
                            <input type="number" name="salary" class="form-control form-control-lg"
                             placeholder="Enter salary" value="<%= user.salary %>" required/>
                        </div>
                        <div class="mb-3">
                            <label for="spouse">Spouse</label>
                            <input type="text" name="spouse" class="form-control form-control-lg"
                             placeholder="Enter spouse name" value="<%= user.spouse %>" required/>
                        </div>
                        <div class="mb-3">
                            <label for="achievements">Achievements</label>
                            <input type="text" name="achievemens" class="form-control form-control-lg"
                             placeholder="Enter achievemens" value="<%= user.achievemnents %>" required/>
                        </div>
                        <div class="mb-3">
                            <label for="bio">Bio</label>
                            <textarea type="text" name="bio" class="form-control form-control-lg"
                             placeholder="Enter brief bio" required><%= user.bio %></textarea>
                        </div>
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Update User" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer.ejs') %> 
